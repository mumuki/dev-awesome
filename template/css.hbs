{{#if isScss}}
$da-font-path: "../fonts" !default;
{{/if}}

@font-face {
	font-family: "{{fontName}}";
	src: {{{src}}};
  font-weight:normal;
  font-style:normal;
}

.{{baseSelector}} {
	line-height: 1;
}

.{{baseSelector}}:before {
	font-family: {{fontName}};
	font-style: normal;
	font-weight: normal;
	vertical-align: top;
}

{{#each codepoints}}
.{{../classPrefix}}{{@key}}:before {
	content: "\\{{this}}";
}

.{{../classPrefix}}{{@key}}-c:before {
  content: "\2001";
  background-size: 100% 100%;
	{{#if ../isScss}}
	background-image: url("#{$da-font-path}/svg/colored/{{@key}}.svg");
	{{else}}
	background-image: url("../fonts/svg/colored/{{@key}}.svg");
	{{/if}}
}
{{/each}}